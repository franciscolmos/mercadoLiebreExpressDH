<!DOCTYPE html>
<html lang="en">
	<%- include('partials/head')%>
<body>
	<!-- Header -->
	<%- include('partials/header')%>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
    <!-- /Banner -->
    <!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Detalle del producto: <%- detail[0].name%></h2>
            </div>
        </div>
        <div class="row">
            <div class="col-12 fila">
                <section class="detalleProducto">
                    <a href="">
                        <figure class="imagenDetalle">
                            <img src=/<%- detail[0].image%> alt="imagen de producto">
                            <p class="pDetail"><%- detail[0].description %></p>
                        </figure>
                        
                    </a>
                    <article class="infoProducto">
                        <h1 class="tituloDetalle"> <%- detail[0].name %></h1>
                        <span class="originalPrice">$<s><%- originalPrice%></s> / <b><%- detail[0].discount%>% OFF</b></span>
                        <h2 class="precioDetalle">$<%- detail[0].price %></h2>
                        <p class="pDetail1"><i class="fas fa-credit-card"></i>pagá en 12 cuotas y sin interés</p>
                        <p class="pDetail1"><i class="fas fa-store"></i>retiro gratis en locales del vendedor</p>
                        <button type="button" class="buttonDetail"><p class="pDetail">COMPRAR AHORA</p></button>
                    </article>
                </section>

            </div>
        </div>
        

        
    </div>
    <!-- footer -->
	<%- include('partials/footer')%>
	<!-- /footer -->
</body>
</html>